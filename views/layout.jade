doctype html
html(lang='en')
    head
        title Twitter Clone
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        link(rel='stylesheet', href='/css/style.css')   
        script(src='/js/jquery-1.11.1.min.js')
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    a(href='/').navbar-brand Twitter Clone
                .navbar-collapse.collapse
                    if user
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href="/logout") Logout
                            li
                                a(href="/feeds/" + user.id) My posts/Add post
                    else
                        form(method="post", action="/signin", accept-charset="utf-8").navbar-form.navbar-right
                            .form-group
                                input(type='text', placeholder='Email', name='email').form-control
                            .form-group
                                input(type='text', placeholder='Password', name='password').form-control
                            button(type='submit').btn.btn-success.btn-auth Sign in
                            a(href="/signup").btn.btn-primary.btn-auth Sign up
        .container.content
            block content

        .container
            hr
            footer
                p Twitter Clone by Aleksandr Korovin 2014