extends layout

block content
    .container
        .row
            .col-xs-12
                .col-lg-10.col-lg-offset-2.col-md-10
                    h1 Sign up
        .row
            .col-lg-9.col-lg-offset-2.col-md-10.col-md-offset-1.col-xs-12.col-sm-offset-0
                .well.well-lg
                    .row
                        .col-xs-8.col-md-offset-2
                            form(method="post", action="signup", accept-charset="utf-8").signup-form
                                .input-group
                                    span.input-group-addon.glyphicon.glyphicon-envelope
                                    input(placeholder="Email", required="required", maxlength="80", type="text", name="email").form-control.input-lg
                                .input-group
                                    span.input-group-addon.glyphicon.glyphicon-user
                                    input(placeholder="Name", required="required", maxlength="80", type="text", name="name").form-control.input-lg
                                .input-group
                                    span.input-group-addon.glyphicon.glyphicon-asterisk
                                    input(placeholder="Password", required="required", maxlength="30", type="text", name="password").form-control.input-lg
                                .input-group
                                    span.input-group-addon.glyphicon.glyphicon-asterisk
                                    input(placeholder="Confirm Password", required="required", maxlength="30", type="text", name="reppassword").form-control.input-lg
                                .form-group
                                    button(type="submit").btn.btn-block.btn-primary.btn-lg Sign Up

